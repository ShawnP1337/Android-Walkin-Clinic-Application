<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewProfileEmployee"
    android:id="@+id/activity_view_profile_employee">
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/sethoscope_foreground" />
    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="#5C32B1D1"
        android:bufferType="normal"
        android:clickable="false"
        android:shadowColor="#196A75"
        android:text="@string/profile_view_employee"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="24sp"
        android:textStyle="normal"
        android:typeface="normal"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/address_label"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Header"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:text="@string/address_employee"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:textColor="#FC24788F"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/address_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Header"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/address_label"
        android:layout_toRightOf="@+id/address_label"
        android:textColor="#FC054C63"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/not_completed" />

    <TextView
        android:id="@+id/phone_label"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:text="PHONE:"
        android:textColor="#FC24788F"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_text"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/phone_label"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@+id/phone_label"
        android:text="@string/not_completed"
        android:textColor="#FC054C63"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/clinic_name_label"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:text="CLINIC:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FC24788F"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/clinic_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_text"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/clinic_name_label"
        android:layout_toRightOf="@+id/clinic_name_label"
        android:text="@string/not_completed"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textSize="18sp"
        android:textColor="#FC054C63" />

    <TextView
        android:id="@+id/accepted_insurance_label"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clinic_name_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:text="ACCEPTED INSURANCE:"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FC24788F"/>

    <TextView
        android:id="@+id/accepted_insurance_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clinic_name_text"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/accepted_insurance_label"
        android:layout_toRightOf="@+id/accepted_insurance_label"
        android:text="@string/not_completed"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="#FC054C63"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/accepted_payment_label"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accepted_insurance_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:text="PAYMENT METHODS:"
        android:textColor="#FC24788F"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/accepted_payment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accepted_insurance_text"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/accepted_payment_label"
        android:layout_toRightOf="@+id/accepted_payment_label"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="#FC054C63"
        android:textSize="18sp"
        android:text="@string/not_completed" />

    <Button
        android:id="@+id/edit_profile_employee"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accepted_payment_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="#5C32B1D1"
        android:text="Edit Profile"
        android:textColor="#FC24788F"
        android:textSize="16sp" />

</RelativeLayout>