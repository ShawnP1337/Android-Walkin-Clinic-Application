        android:layout_marginLeft="125dp"
        android:layout_marginTop="-7dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@+id/monday_hours"
        android:layout_toRightOf="@+id/friday_hours"
        android:background="#5C32B1D1"
        android:onClick="editFriday"
        android:text="@string/edit"
        android:textColor="#BE24788F"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tuesday_title"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_below="@+id/monday_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="Tuesday"
        android:textColor="#FC054C63"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tuesday_hours"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/tuesday_title"
        android:layout_marginStart="12dp"
