<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.walk_in_clinic.MainLoginActivity">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="64dp"
        android:accessibilityLiveRegion="polite"
        android:background="@drawable/roundedlayout">

        <EditText
            android:id="@+id/username"
            android:layout_width="261dp"
            android:layout_height="46dp"
            android:layout_above="@+id/password"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="34dp"
            android:autofillHints=""
            android:color="#5C32B1D1"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:ems="10"
            android:hint="@string/prompt_username"
            android:inputType="textPersonName"
            android:textColor="#BE24788F"
            android:textCursorDrawable="@color/colorAccent"
            android:textColorHint="#7E24788F"
            tools:targetApi="o"
            android:drawableStart="@drawable/ic_person_black_24dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="261dp"
            android:layout_height="46dp"
            android:layout_above="@+id/login"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="33dp"
            android:autofillHints=""
            android:color="#5C32B1D1"
            android:drawableLeft="@drawable/ic_https_black_24dp"
            android:ems="10"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColor="#BE24788F"
            android:textCursorDrawable="@color/colorAccent"
            android:textColorHint="#7E24788F"
            tools:targetApi="o" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal"
            android:indeterminateBehavior="cycle"
            android:visibility="gone" />


        <Button
            android:id="@+id/login"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sign_up"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginBottom="33dp"
            android:background="#32B1D1"
            android:bufferType="normal"
            android:clickable="true"
            android:padding="10sp"
            android:text="@string/action_sign_in"
            android:textAllCaps="false"
            android:textColor="#FC24788F"
            android:textSize="18sp" />

        <Button
            android:id="@+id/sign_up"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="50dp"
            android:background="#0226C6DA"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="#BE24788F"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="205dp"
        android:layout_height="227dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        app:srcCompat="@mipmap/stethoscope_foreground" />

</RelativeLayout>