        android:textSize="18sp" />

    <EditText
        android:id="@+id/wednesday_edit"
        android:layout_width="102dp"
        android:layout_height="39dp"
        android:layout_alignTop="@+id/wednesday_hours"
        android:layout_alignBottom="@+id/wednesday_hours"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/wednesday_hours"
        android:layout_toRightOf="@+id/wednesday_hours"
        android:gravity="left"
        android:hint="@string/edit"
        android:inputType="text"
        android:textColorHint="#7E24788F"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="18sp" />

    <EditText
